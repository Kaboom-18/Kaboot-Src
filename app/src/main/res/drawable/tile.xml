<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer for elevation effect -->
    <item>
        <shape>
            <solid android:color="#33000000" /> <!-- semi-transparent black shadow -->
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

    <!-- Main shape with gradient for 3D look -->
    <item android:left="2dp" android:top="2dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <gradient
                android:startColor="@color/tileBg"
                android:endColor="@color/tileBgEnd"
                android:angle="270" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

</layer-list>
