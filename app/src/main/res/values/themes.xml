<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style
        name="AppTheme"
        parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/title</item>
        <item name="colorPrimaryContainer">@color/fabBg</item>
        <item name="colorSurface">@color/dialogBg</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:windowBackground">@color/bg</item> <!-- fixed here -->
        <item name="android:statusBarColor">@color/statusBg</item>

        <item name="colorOnPrimaryContainer">@color/text</item>
        <item name="android:navigationBarColor">@color/bg</item>
        <item name="colorOnSurface">@color/text</item>
        <item name="colorOnSurfaceVariant">@color/text</item>
        <item name="elevationOverlayEnabled">false</item> <!-- Check if this is recognized -->
        <item name="android:windowAnimationStyle">@style/AppWindowAnimation</item>
    </style>

    <style name="AppWindowAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/anim_start</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_end</item>
    </style>
</resources>
